footer
  margin-top 1em
  background color-footer

#footer
  width 95%
  margin 0 auto
  overflow hidden
  position relative
  .line
    width 100%
    height 5em
    margin 0 auto
    @media mini
      width 10em
      float left
      position relative
    span
      display block
      width 0.5em
      height 3.25em
      border-right 0.125em solid color-white
      margin 0 auto
      @media mini
        position absolute
        left 3em
        margin 0 0 1.5em

.author
  width w=(110/16)em
  height w
  margin 0 auto
  if dataURI
    background no-repeat url(author-img-data) left top
  else
    background no-repeat url(root+author-img) left top 
  background-size w w
  border-radius (w/2)
  transition transform 2s ease-out
  &:hover
    transform rotateZ(360deg)
  @media mini
    position: absolute;
    top 0.8em
    margin 0 0 1.5em

.info
  if ShowCustomFont
    font-family serif
    font-smoothing()
    font-size .9em
    line-height 1.2em
  else
    font-family font-default
    line-height line-height+0.15
  width 56%
  margin 0 auto
  color color-white
  @media mini
    margin 2em 0 0.6em 0
    float left
    width 60%

.info p
  margin .3em auto
  
.social-font
  width 100%
  margin 0 auto
  float left
  padding-left 3%
  @media phone
    padding-left 20%
  @media mini
    width 18em 
    position absolute  
    right -8em
    top 3em
  a
    float left
    display block
    width 14%
    color color-white
    font-size font-size+80
    padding 0.5em
    @media tablet
      padding 0.3em
    &:hover:before
      color color-blue
    &[title="weibo"]::before,&[title="twitter"]::before,&[title="github"]::before,&[title="facebook"]::before
      font-family font-icon-family
      font-smoothing()
    &[title="weibo"]::before
      content "\f18a"
    &[title="twitter"]::before
      content "\f099"
    &[title="github"]::before
      content "\f09b"
    &[title="facebook"]::before
      content "\f09a"
 
.copyright
  if ShowCustomFont
    font-smoothing()
    font-family serif
    font-size .9em
  else
    font-family font-default
    font-size 0.6em
  width 100%
  color color-white
  text-align center
  @media mini
    float left
  a
    color color-white
    &:hover
      color color-blue
