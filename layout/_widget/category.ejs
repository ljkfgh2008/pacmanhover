<% if (site.categories.length){ %>
<div class="categorieslist">
	<p rel="asidetitle grow" class="asidetitle grow"><%= __('categories') %></p>
		<ul>
		<% site.categories.sort('name').each(function(item){ %>
			<li><a rel="grow" class="grow" href="<%- config.root %><%- item.path %>" title="<%= item.name %>"><%= item.name %><sup><%= item.posts.length %></sup></a></li>
		<% }); %>
		</ul>
</div>
<% } %>
